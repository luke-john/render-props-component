{
  "name": "render-props-component",
  "version": "0.0.0",
  "main": "dist/index.js",
  "typings": "typings/index.d.ts",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "pre:build": "rimraf build && copy package.json ./build",
    "build:main":
      "tsc --project ./tsconfig.build.json --outDir ./build/dist --declarationDir ./build/typings",
    "build": "yarn run pre:build && yarn run build:main",
    "dist": "cd build && npm publish",
    "test": "jest --config ./jest.config.json"
  },
  "peerDependencies": {
    "react": "^16.2.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.9",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^22.1.3",
    "@types/react": "^16.0.38",
    "copy": "^0.3.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.0",
    "ts-loader": "^4.0.0",
    "typescript": "^2.7.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css,ts,tsx}": [
      "prettier --single-quote --trailing-comma --no-semi --write",
      "git add"
    ]
  }
}
